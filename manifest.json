{
  "manifest_version": 2,
  "name": "Fiction Sender",
  "version": "1.15",
  "applications": {
    "gecko": {
      "id": "fiction_sender@schnuff.eu"
    }
  },

  "description": "Adds shortcuts to send (fan-)fictions to a web site to convert them.",

  "icons": {
    "48": "icon/icon48.png",
    "96": "icon/icon96.png"
  },

  "permissions": [
    "*://*.fanfiction.net/s/*",
    "storage",
    "tabs",
    "history"
  ],

  "optional_permissions":  [
    "*://*/*"
  ],

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "background": {
    "scripts": ["urlchanger.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon/icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://*.fanfiction.net/*", "*://*.tthfanfic.org/*", "*://*.literotica.com/*"],
      "js": ["linkchanger.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.fanfiction.net/*"],
      "js": ["word_highlighter.js"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    "icon/icon48.png",
    "word_highlighter.css"
  ]
}
